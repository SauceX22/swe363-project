{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "**/dist/",
    "**/node_modules/"
  ],
  "include": [
    "./src"
  ]
}