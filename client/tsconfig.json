{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // Ignore unused variables
    "noUnusedParameters": false, // Ignore unused parameters
    "skipLibCheck": true, // Skip type checking of declaration files
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/routes/market/index.lazy.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}